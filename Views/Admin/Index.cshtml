@using TravelTripProject.Models.Sınıflar
@model List<Blog>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<h2 style="padding-left:40%">Blog Listesi</h2>
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>BAŞLIK</th>
        <th>AÇIKLAMA</th>
        <th>TARİH</th>
        <th>FOTOĞRAF</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>DETAYLAR</th>
    </tr>
    @foreach(var x in Model)
    {
    <tr>
        <td>@x.ID</td>
        <td>@x.Baslik</td>
        <td>@x.Aciklama</td>
        <td>@x.Tarih</td>
        <td>@x.BlogImage</td>
        <td><a href="/Admin/BlogSil/@x.ID" class="btn btn-danger">Sil</a></td>
        <td><a href="/Admin/BlogGetir/@x.ID" class="btn btn-success">Güncelle</a></td>
        <td><a href="/Admin/YorumListesi/@x.ID" class="btn btn-default">Detaylar</a></td>    
    </tr>
    }

</table>
<a href="/Admin/YeniBlog" class="btn btn-primary">Yeni Blog</a>


